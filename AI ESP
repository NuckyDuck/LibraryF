-- ESP AI Script for Roblox Project Delta

-- Define ESP settings
local ESP_ENABLED = true
local ESP_COLOR = Color3.fromRGB(255, 255, 255) -- White color for text
local ESP_FONT_SIZE = 10

-- Function to create ESP for a given bot
local function createESP(bot)
    -- Check if bot exists and has Humanoid
    if bot and bot:FindFirstChild("Humanoid") then
        -- Create a BillboardGui as the ESP
        local billboardGui = Instance.new("BillboardGui")
        billboardGui.Adornee = bot:FindFirstChild("HumanoidRootPart") or bot.PrimaryPart or bot:FindFirstChild("Head")
        billboardGui.AlwaysOnTop = true
        billboardGui.Size = UDim2.new(0, 100, 0, 40) -- Adjust size as needed

        -- Create a TextLabel as the ESP's visual
        local textLabel = Instance.new("TextLabel")
        textLabel.BackgroundTransparency = 1
        textLabel.Size = UDim2.new(1, 0, 1, 0)
        textLabel.Text = bot.Name .. "\nHP: " .. tostring(bot.Humanoid.Health)
        textLabel.Font = Enum.Font.SourceSans
        textLabel.TextSize = ESP_FONT_SIZE
        textLabel.TextColor3 = ESP_COLOR
        textLabel.TextStrokeTransparency = 0.5
        textLabel.Parent = billboardGui

        -- Attach the BillboardGui to the bot
        billboardGui.Parent = game.CoreGui
    end
end

-- Function to create ESP for bots within an AiZone
local function createESPinZone(aiZone)
    for _, bot in ipairs(aiZone:GetChildren()) do
        createESP(bot)
    end
end

-- Function to loop through all AiZones and create ESP for bots within each zone
local function createAllESP()
    local aiZones = game.Workspace:FindFirstChild("AiZones")
    if aiZones then
        for _, aiZone in ipairs(aiZones:GetChildren()) do
            createESPinZone(aiZone)
        end
    end
end

-- Main loop to update ESP for new bots
while true do
    if ESP_ENABLED then
        createAllESP()
    end
    wait(1) -- Adjust this time interval based on performance needs
end
